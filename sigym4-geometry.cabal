-- Initial sigym4-geometry.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                sigym4-geometry
version:             0.4.3.1
synopsis:            Geometry types for GIS applications.
description:         Geometry types for GIS applications, algorithms and
                     de/serialization from/into well-known formats.
                     Includes WKB and Geojson de/serializers.
homepage:            https://github.com/albertov/sigym4-geometry
license:             BSD3
license-file:        LICENSE
author:              Alberto Valverde
maintainer:          alberto@toscat.net
copyright:           2014-2016 Meteogrid, Alberto Valverde GonzÃ¡lez
category:            Data
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

source-repository head
  type:              git
  location:          https://github.com/albertov/sigym4-geometry

flag herbie
  description: Enable `herbie`.
  default: False
  manual: True

flag debug
  description: Enable Debug mode
  default: False
  manual: True

flag asserts
  description: Enable Assertions
  default: False
  manual: True


library
  exposed-modules:    Sigym4.Geometry
                    , Sigym4.Geometry.Types
                    , Sigym4.Geometry.Algorithms
                    , Sigym4.Geometry.Arrow
                    , Sigym4.Geometry.Binary
                    , Sigym4.Geometry.Json
                    , Sigym4.Geometry.QuadTree
                    , Sigym4.Geometry.QuadTree.Internal.Types
                    , Sigym4.Geometry.QuadTree.Internal.Algorithms
  build-depends:      base                 >= 4.8    && < 5
                    , aeson                >= 0.9    && < 1.3
                    , bytestring           >= 0.10   && < 0.11
                    , deepseq              >= 1.4    && < 1.5
                    , binary               >= 0.7    && < 0.9
                    , hashable             >= 1.2    && < 1.3
                    , text                 >= 1.2    && < 1.3
                    , vector               >= 0.11   && < 0.13
                    , primitive            >= 0.6    && < 0.7
                    , transformers         >= 0.4    && < 0.6
                    , mtl                  >= 2.2    && < 2.3
                    , template-haskell     >= 2.5    && < 2.14
                    , unordered-containers >= 0.2    && < 0.3
                    , data-binary-ieee754  >= 0.4    && < 0.5
                    , distributive         >= 0.5    && < 0.6
                    , lens                 >= 4.13   && < 4.17
                    , semigroups           >= 0.18   && < 0.19
                    , linear               >= 1.20.4 && < 1.21
                    , spatial-reference    >= 0.1    && < 0.2
                    , strict               >= 0.3    && < 0.4
                    , vector-th-unbox      >= 0.2    && < 0.3
  default-language: Haskell2010
  hs-source-dirs:   src
  ghc-options:      -Wall
                    -fwarn-incomplete-patterns
                    -fwarn-incomplete-uni-patterns
                    -funbox-strict-fields

  if flag(herbie)
    build-depends: HerbiePlugin >= 0.1 && < 0.2
    ghc-options: -fplugin=Herbie
    cpp-options: -DHERBIE

  if flag(debug)
    cpp-options: -DDEBUG

  if flag(asserts)
    cpp-options: -DASSERTS

test-suite main
  type:             exitcode-stdio-1.0
  build-depends:    base
                  , hspec                >= 1.10.0
                  , sigym4-geometry
                  , QuickCheck
                  , vector
                  , bytestring
                  , deepseq
  hs-source-dirs:   tests
  main-is:          Spec.hs
  default-language: Haskell2010
  ghc-options:      -Wall -rtsopts -with-rtsopts=-K1K

benchmark bench
  type:             exitcode-stdio-1.0
  hs-source-dirs:   tests bench
  main-is:          Main.hs
  build-depends:    base
                  , criterion
                  , QuickCheck
                  , random
                  , sigym4-geometry
                  , bytestring
                  , vector
                  , deepseq
  default-language: Haskell2010
  ghc-options:      -Wall -O2 -rtsopts -with-rtsopts=-T
